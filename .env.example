# RPC（脚本与 cast 交互使用）
RPC_URL=https://sepolia.infura.io/v3/xxxxx

# 钱包私钥（部署/交互脚本使用）
PRIVATE_KEY=your_private_key

# Etherscan API Key（用于自动验证合约，可选）
# 获取地址：https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key

# VRF v2.5（Wrapper 地址见 README）
VRF_WRAPPER=0x195f15F2d49d693cE265b4fB0fdDbE15b1850Cc1
# 发起抽奖时的 VRF 费用上限（wei）
MAX_VRF_FEE_WEI=2000000000000000

# 录入批次参数（RegisterBatch 脚本使用）
RED_PACKET=deployed_contract_address
# 每批录入数量
BATCH_SIZE=30

# 批量添加管理员（AddAdmin 脚本使用，逗号分隔）
NEW_ADMINS=0x1234567890123456789012345678901234567890,0xabcdefabcdefabcdefabcdefabcdefabcdefabcd
# 强制提交：1=跳过不合法地址并继续；0/不设置=遇错即停止
FORCE_SUBMIT=0

# 导出 Allocation 事件参数（queryAllocations.js 使用）
# FROM_BLOCK 为必填起始区块；TO_BLOCK 不设置则默认最新区块
FROM_BLOCK=0
# TO_BLOCK=0

# 批量注册 EOA 检查开关（RegisterBatch.js 脚本使用）
EOA_CHECK=0

# 随机词（紧急回调脚本使用）
RANDOM_WORD=12345678901234567890